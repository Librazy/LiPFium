<!--  ReSharper disable Xaml.RedundantNamespaceAlias  -->
<Window x:Class="LiPFium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:LiPFium"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="MWindow"
        Title="MainWindow"
        Width="810"
        Height="510"
        MinWidth="610"
        MinHeight="400"
        Style="{StaticResource LiPFiumWindow}"
        mc:Ignorable="d">
    <!--  ReSharper restore Xaml.RedundantNamespaceAlias  -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="{Binding Path=WMargin, ElementName=MWindow}" />
    </WindowChrome.WindowChrome>
</Window>